# Always 0 when this data is in a file
prompt 0

# Lattice dimensions
nx 4
ny 4
nz 4
nt 4
# random number seed
iseed 5682304

# mass for psi-bar-psi
mass 0.1

# tadpole factor
u0   1.0

# CG for psi-bar-psi measurement (error_per_site is unused)
max_cg_iterations 300
max_cg_restarts 5
error_per_site .000005
error_for_propagator .000002

# Number of eigenvalues to compute (storage required for all eigenvectors)
Number_of_eigenvals 32

Max_Rayleigh_iters 2000
nArnoldi 384

# Eigenvalue tolerance
eigenval_tolerance 1.0e-13

# which_poly 3
# norder 10
# eig_start  1
# eig_end  50
# poly_param_1 30
# poly_param_2 0.5
# eigmax 1

# Output eigenvectors
forget_ks_eigen

# Input lattice
reload_serial ../../binary_samples/lat.sample.inst
staple_weight 0
ape_iter 0
