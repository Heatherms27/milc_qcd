#  Kogut-Susskind fermions with improved actions
#  MIMD version 7
#  "ks_imp3", started 1/22/99, streamline ks_imp2
#
#  Generic make-include file for ks_imp_dyn2 codes
#  This template file defines rules and macros common to all architectures
#  It is intended to be an include file for other Makefiles.
#  Don't use it by itself!
#
#	"make su3_rmd" used the refreshed molecular dynamics algorithm
#		for the Symanzik 1 loop gauge action and Asqtad quark action
#	"make su3_spectrum" uses the refreshed molecular dynamics
#	        algorithm with the su3_rmd action and does spectrum
#	        measurements
#	"make su3_hybrids" uses the refreshed molecular dynamics
#	        algorithm with the su3_rmd action and does spectrum
#	        measurements, including the hybrid spectrum
#       See examples below for naming and building targets for
#               other actions

MYINCLUDEDIR = .
INCLUDEDIR = ../include
#Where the complex and su3 libraries are
LIBDIR = ../libraries

GLOBAL_HEADERS = \
  ${INCLUDEDIR}/config.h \
  ${INCLUDEDIR}/complex.h \
  ${INCLUDEDIR}/su3.h \
  ${INCLUDEDIR}/comdefs.h \
  ${INCLUDEDIR}/macros.h \
  ${INCLUDEDIR}/generic.h \
  ${INCLUDEDIR}/generic_ks.h \
  ${INCLUDEDIR}/loopend.h \
  ${INCLUDEDIR}/io_lat.h

MY_HEADERS = \
  lattice.h \
  params.h \
  defines.h \
  ks_imp_includes.h

HEADERS = ${GLOBAL_HEADERS} ${MY_HEADERS}

MY_OBJECTS= \
  f_meas.o \
  gauge_info.o \
  update.o \
  update_h.o \
  update_u.o

G_OBJECTS0 = \
  check_unitarity.o \
  d_plaq4.o \
  gaugefix2.o \
  gauge_stuff.o \
  io_helpers.o \
  io_lat4.o \
  make_lattice.o \
  path_product.o \
  ranmom.o \
  ranstuff.o \
  remap_stdio_from_args.o \
  reunitarize2.o

ifdef QCDOC
  G_OBJECTS1 = ${G_OBJECTS0} ploop2.o
else
  G_OBJECTS1 = ${G_OBJECTS0} ploop3.o
endif

ifdef QIO
  G_OBJECTS = ${G_OBJECTS1} io_scidac.o
else
  G_OBJECTS = ${G_OBJECTS1}
endif

G_KS_OBJECTS = \
  grsource_imp.o \
  mat_invert.o \
  quark_stuff.o \
  rephase.o

SPECTRUM_OBJECTS = \
  flavor_ops.o \
  fpi_2.o \
  hvy_pot.o \
  nl_spectrum.o \
  spectrum2.o \
  spectrum_mom.o \
  spectrum_multimom.o \
  spectrum_nd.o \
  spectrum_nlpi2.o

# Objects depending on architecture and software package 

# Layout
ifeq ($(strip ${QCDOC}),true)
  LAYOUT = layout_qcdoc.o      # Required
else
  ifeq ($(strip ${HAVEQDP}),true)
    LAYOUT = layout_qdp.o      # Required
  else
    LAYOUT = layout_hyper.o    # Choices possible here
  endif
endif

# Choose dslash (dslash_fn.o dslash_fn2.o)
DSLASH_FN = dslash_fn.o  # Or dslash_fn2.o

# Choose Asqtad fermion force 
# (fermion_force_asqtad.o fermion_force_asqtad2.o fermion_force_asqtad_qdp.o)
ASQFORCE = fermion_force_asqtad2.o

ifeq ($(strip ${QCDOC}),true)
  QCDOC_OBJECTS = qcdoc_alloc.o
endif

ifeq ($(strip ${HAVEQDP}),true)
  QDP_OBJECTS = stuff_qdp.o control_qdp.o setup_qdp.o
  INV_FN_OBJECTS = d_congrad5_fn_qdp.o ${DSLASH_FN} dslash_fn_qdp.o 
  MULTI_INV = ks_multicg_qdp.o
else
  GEN_OBJECTS = control.o setup.o 
  INV_FN_OBJECTS = d_congrad5_fn.o ${DSLASH_FN}
  MULTI_INV = ks_multicg.o
endif

ADD_OBJECTS = ${MACHINE_DEP_IO} ${COMMPKG} ${QCDOC_OBJECTS} ${QDP_OBJECTS} \
   ${GEN_OBJECTS} ${SCIDAC_OBJECTS}

OBJECTS = ${MY_OBJECTS} ${G_OBJECTS} ${G_KS_OBJECTS} ${LAYOUT} \
  ${ADD_OBJECTS} ${EXTRA_OBJECTS}

#Libraries for complex numbers and su3 functions
QCDLIB = ${LIBDIR}/su3.${PRECISION}.a ${LIBDIR}/complex.${PRECISION}.a 

.c.o: ; ${CC} -c ${CFLAGS}  $*.c 

# To force a full remake when changing targets
LASTMAKE = .lastmake.${MAKEFILE}.${MYTARGET}

${LASTMAKE}:
	-/bin/rm -f .lastmake.*
	/bin/rm -f .lastmake.* quark_action.h gauge_action.h
	${MAKE} -f ${MAKEFILE} clean
	touch ${LASTMAKE}

ALL_MAKES = Make_template ../generic/Make_template \
	../generic_ks/Make_template ${MAKEFILE} ../include/Make_template

# To force a remake when changing any make file, header, or target
${OBJECTS} : ${HEADERS} ${LASTMAKE} ${ALL_MAKES}

quark_stuff.o: quark_action.h 
gauge_stuff.o: gauge_action.h 
gauge_info.o:  quark_action.h

# Directories where we store the improved action headers
QUARKIMP = ../generic_ks/imp_actions
GAUGEIMP = ../generic/imp_actions

quark_action.h: ${QUARKIMP}/${QUARK}
	/bin/cp ${QUARKIMP}/${QUARK} quark_action.h

gauge_action.h: ${GAUGEIMP}/${GAUGE}
	/bin/cp ${GAUGEIMP}/${GAUGE} gauge_action.h


########################################################
# Optional DEFINES for timing:
# -DCGTIME for cg timing and iterations
# -DGFTIME for gauge force timing
# -DFFTIME for fermion force timing
# -DLLTIME for long link timing

# Optional DEFINES for data layout:
# -DDSLASH_TMP_LINKS puts fatlinks and longlinks in temp
# -DCONGRAD_TMP_VECTORS puts congrad vectors in temp

# Optional DEFINES for pbp estimates
# -DNPBP_REPS Number of repeated evaluations of stochastic 
#       psi-bar-psi

# Optional DEFINES for EOS
# -DDM_DU0 for calculating deriv of action wrto u0

# Optional DEFINES for quark number susceptibility
# -DCHEM_POT

##### Targets:
#		("FN" = "fat+Naik")

ifdef QCDOC
  DARCH = -DQCDOC
endif

ifdef HAVEQIO
  DHAVE_QIO = -DHAVE_QIO
endif

#	-DNPBP_REPS=10" \
# 	-DCGTIME -DFFTIME -DGFTIME -DLLTIME" \

su3_rmd::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DCONGRAD_TMP_VECTORS -DDSLASH_TMP_LINKS" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = asqtad_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE}"

su3_rmd_eos::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DCONGRAD_TMP_VECTORS -DDSLASH_TMP_LINKS" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = asqtad_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE}"

su3_rmd_susc::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN -DCONGRAD_TMP_VECTORS -DDSLASH_TMP_LINKS \
	-DNPBP_REPS=100 -DCHEM_POT" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = asqtad_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE}"

su3_hmc::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS \
	-DPHI_ALGORITHM -DHMC_ALGORITHM" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = asqtad_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE} d_action.o"

# The following target is a superset of su3_spectrum

su3_hybrids::
	make -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS \
	-DSPECTRUM -DHYBRIDS" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = asqtad_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE} \
	${MULTI_INV} ape_smear.o project_su3_hit.o \
	field_strength.o spectrum_hybrids5.o \
	${SPECTRUM_OBJECTS}"

# The following target will not do hybrids

su3_spectrum::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS \
	-DSPECTRUM" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = asqtad_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE} \
	${MULTI_INV} ${SPECTRUM_OBJECTS}"


# The following stanzas illustrate how to create targets for alternative
# choices of quark and gauge actions

su3_rmd_eo_symzk1_fat7tad::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DEO ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = fat7tad_action.h" \
	"EXTRA_OBJECTS= d_congrad5_eo.o dslash_eo.o \
	fermion_force_general.o"

su3_rmd_plaq_fat7naik::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS" \
	"GAUGE = plaquette_action.h" \
	"QUARK = fat7naik_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} \
	fermion_force_general.o"

su3_rmd_symzk1_naik::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DFN ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = naik_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} \
	fermion_force_general.o"

su3_rmd_eo_symzk1_p4::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DEO ${DARCH} ${DHAVE_QIO} \
	-DDSLASH_TMP_LINKS -DCONGRAD_TMP_VECTORS" \
	"GAUGE = symanzik_1loop_action.h" \
	"QUARK = p4_action.h" \
	"EXTRA_OBJECTS= ${INV_FN_OBJECTS} ${ASQFORCE} \
	 fermion_force_general.o"

clean:
	-/bin/rm -f *.o

# Rules for generic routines
include ../generic/Make_template

# Rules for generic_ks routines
include ../generic_ks/Make_template

# Rules for header files
include ../include/Make_template

libmake:
	@echo Building libraries with ${MAKELIBRARIES}
	cd ${LIBDIR} ;\
	${MAKE} -f ${MAKELIBRARIES} "APP_CC=${CC}" "PRECISION=${PRECISION}" all

localmake: ${OBJECTS} ${QCDLIB}
	${LD} ${LDFLAGS} -o ${MYTARGET} \
	${OBJECTS} ${QCDLIB} ${ILIB} -lm
	touch localmake

target: libmake localmake 

