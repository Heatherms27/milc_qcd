#  Standard Wilson fermion inverter
#  MIMD version 6

#  Generic make-include file for wilson_invert codes
#  For BOTH flavor-diagonal and mixed flavor {heavy-light} codes
#  This template file defines rules and macros common to all architectures
#  It is intended to be an include file for other Makefiles.
#  Don't use it by itself!
#
#	"su3_wil_cg" flavor-diagonal mesons and baryons
#	"su3_wil_bi" flavor-diagonal mesons and baryons with
#          bi-conjugate gradient inverter
#	"su3_whl_cg" flavor-diagonal and off-diagonal mesons and baryons
#	"su3_whl_bi" flavor-diagonal and off-diagonal mesons and baryons
#          with bi-conjugate gradient inverter

MYINCLUDEDIR = .
INCLUDEDIR = ../include
#Where the complex and su3 libraries are
LIBDIR = ../libraries

GLOBAL_HEADERS = \
  ${INCLUDEDIR}/config.h \
  ${INCLUDEDIR}/complex.h \
  ${INCLUDEDIR}/su3.h \
  ${INCLUDEDIR}/comdefs.h \
  ${INCLUDEDIR}/macros.h \
  ${INCLUDEDIR}/generic.h \
  ${INCLUDEDIR}/generic_quark_types.h \
  ${INCLUDEDIR}/generic_wilson.h \
  ${INCLUDEDIR}/io_lat.h \
  ${INCLUDEDIR}/io_wb.h


MY_HEADERS = \
  lattice.h \
  params.h \
  defines.h \
  wi_inv_includes.h

HEADERS = ${GLOBAL_HEADERS} ${MY_HEADERS} ${ADDHEADERS}

# Choose one of the lattice layout algorithms:
LAYOUT = layout_hyper

# All required object files
# Basic set from current directory
MY_OBJECTS =         \
  gauge_info.o       \
  setup_w.o          \
  wilson_info.o
# Basic set from generic directory
G_OBJECTS =          \
  ${LAYOUT}.o        \
  check_unitarity.o  \
  d_plaq4.o          \
  gaugefix2.o        \
  io_helpers.o       \
  io_helpers_w.o     \
            \
             \
  make_lattice.o     \
  restrict_fourier.o \
  reunitarize2.o
# Basic set from generic_wilson directory
G_WILSON_OBJECTS =   \
  dslash_lean.o      \
  meson_cont.o       \
  w_baryon.o         \
  w_meson.o          \
  w_source.o         \
  wilson_invert_lean.o

# To these we add project-specific extra objects and machine-dependent objects
OBJECTS = ${MY_OBJECTS} ${G_OBJECTS} ${G_WILSON_OBJECTS} \
  ${EXTRA_OBJECTS} ${MACHINE_DEP}

#Libraries for complex numbers and su3 functions
QCDLIB = ${LIBDIR}/su3.a ${LIBDIR}/complex.a 

# Default rule for C compilation
.c.o:
	${CC} -c ${CFLAGS} $<

# All make files used in this compilation
ALL_MAKES = Make_template ../generic/Make_template \
  ../generic_wilson/Make_template \
  ${MAKEFILE} ../include/Make_template

# Used to force a full remake when changing targets or a make file
LASTMAKE = .lastmake.${MAKEFILE}.${MYTARGET}

${LASTMAKE}: ${ALL_MAKES}
	-/bin/rm -f .lastmake.*
	${MAKE} -f ${MAKEFILE} clean
	touch ${LASTMAKE}

# All objects should depend on these
ALL_DEPEND = ${LASTMAKE} ${HEADERS} ${ALL_MAKES}

${OBJECTS}: ${ALL_DEPEND}

##### Targets:
# Note: we prefer double precison version of inverters {for global sums}

# Optional DEFINES for timing:
# -DIOTIME for I/O timing
# -DPRTIME for propagator timing
# -DCGTIME for cg timing and iterations

su3_wil_cg::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DCGTIME" \
	"EXTRA_OBJECTS= control_w.o d_cgilu_w_lean2.o "

su3_wil_bi::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DBI -DCGTIME" \
	"ADDHEADERS = addsite_wil_bi.h " \
	"EXTRA_OBJECTS= control_w.o d_bicgilu_w_lean2.o "

su3_whl_cg::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DHL" \
	"ADDHEADERS = addsite_whl_cg.h " \
	"EXTRA_OBJECTS= control_w_hl.o d_cgilu_w_lean.o w_baryon_hl.o"

su3_whl_bi::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DBI -DHL" \
	"ADDHEADERS = addsite_whl_bi.h " \
	"EXTRA_OBJECTS= control_w_hl.o d_bicgilu_w_lean.o w_baryon_hl.o "

clean:
	-/bin/rm -f *.o

# Rules for generic routines
include ../generic/Make_template

# Rules for generic_wilson routines
include ../generic_wilson/Make_template

# Rules for header files
include ../include/Make_template

libmake:
	@echo Building libraries with ${MAKELIBRARIES}
	cd ${LIBDIR} ;\
	${MAKE} -f ${MAKELIBRARIES} "APP_CC=${CC}" all

localmake: ${OBJECTS} ${QCDLIB}
	${LD} ${LDFLAGS} -o ${MYTARGET} \
	${OBJECTS} ${QCDLIB} ${ILIB} -lm
	touch localmake

target: libmake localmake 
