DIRS = \
   ks_eigen \
   ks_imp_dyn \
   ks_measure \
   ks_spectrum \
   schroed_ks_dyn \
   symanzik_sl32 \
   u1_gauge \


all:
	for dir in ${DIRS};\
	do\
	    echo "Testing $$dir"; \
	    cp Makefile $$dir; \
	    cd $$dir; \
	    ${MAKE} -k check > maketest.log 2>&1;\
	    cd ..;\
	done

clean:
	for dir in ${DIRS};\
	do\
	    (cd $$dir; ${MAKE} test_clean;)\
	done

